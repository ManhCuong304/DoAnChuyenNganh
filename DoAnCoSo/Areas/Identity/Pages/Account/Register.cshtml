@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Register";
}

<div class="login-container" style="display: flex; justify-content: center; align-items: center; background-color: azure; min-height: 100vh;">
    <div class="login-card" style="display: flex; width: 80%; max-width: 900px; background: #fff; border-radius: 15px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
        <div class="form-section" style="flex: 1; padding: 40px; display: flex; flex-direction: column; justify-content: center;">
            <h2 style="color: #6b48ff; margin-bottom: 20px;">Welcome</h2>
            <h3 style="margin-bottom: 30px;">Create a new account</h3>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" style="display: flex; flex-direction: column; gap: 15px;">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.UserName">Username</label>
                    </div>
                    <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="your username" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.FullName">FullName</label>  <!-- Nhãn cho FullName -->
                    </div>
                    <input asp-for="Input.FullName" class="form-control" autocomplete="name" aria-required="true" placeholder="your fullname" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>


                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.Email">Email</label>
                    </div>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.Password">Password</label>
                    </div>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px;width:100%" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    </div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px;width:100%" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-primary" style="background: #6b48ff; color: #fff; border: none; padding: 10px; border-radius: 5px; cursor: pointer;">Register</button>
            </form>
        </div>
        <div class="illustration-section" style="flex: 1; background: antiquewhite; padding: 40px; display: flex; align-items: center; justify-content: center;">
            <img src="https://img.freepik.com/free-vector/welcome-concept-illustration_114360-27447.jpg?ga=GA1.1.262810338.1745506426&semt=ais_hybrid&w=740" alt="Illustration" style="width: 100%; height: auto; mix-blend-mode: multiply;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}