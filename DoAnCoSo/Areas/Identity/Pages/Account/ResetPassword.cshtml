@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="login-container" style="display: flex; justify-content: center; align-items: center; min-height: 100vh;">
    <div class="login-card" style="display: flex; width: 80%; max-width: 900px; background: #fff; border-radius: 15px; overflow: hidden; box-shadow: 0 10px 30px rgba(0,0,0,0.1);">
        <div class="form-section" style="flex: 1; padding: 40px; display: flex; flex-direction: column; justify-content: center;">

            <h3 style="margin-bottom: 30px;">Reset your password</h3>
            <form method="post" style="display: flex; flex-direction: column; gap: 15px;">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.Email" class="form-label">Email</label>

                    </div>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.Password" class="form-label">Password</label>
                    </div>
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <div>
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    </div>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password" style="border: 1px solid #ccc; border-radius: 5px; padding: 10px; height: 50px; width:100%" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-primary" style="background: #6b48ff; color: #fff; border: none; padding: 10px; border-radius: 5px; cursor: pointer; transition: all 0.3s ease;">Reset</button>
            </form>
        </div>
        <div class="illustration-section" style="flex: 1; background: antiquewhite; padding: 40px; display: flex; align-items: center; justify-content: center;">
            <img src="https://img.freepik.com/free-vector/teamwork-concept-landing-page_52683-20165.jpg?ga=GA1.1.262810338.1745506426&semt=ais_hybrid&w=740" alt="Illustration" style="width: 100%; height: auto; mix-blend-mode: multiply;" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}