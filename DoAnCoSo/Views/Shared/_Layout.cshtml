<script>
    (() => {
        // debounce helper
        function debounce(fn, wait) {
            let t;
            return (...args) => {
                clearTimeout(t);
                t = setTimeout(() => fn(...args), wait);
            };
        }

        async function getSearchUser(query) {
            const resultContainer = document.getElementById('search-results');
            if (!resultContainer) {
                console.error('[Search] Không tìm thấy #search-results');
                return;
            }

            try {
                // debug: show that we're calling
                console.log('[Search] gọi: /Profile/SearchProfile?query=', query);

                const resp = await fetch(`/Profile/SearchProfile?query=${encodeURIComponent(query)}`, {
                    method: 'GET',
                    credentials: 'same-origin' // gửi cookie nếu cần (đăng nhập)
                });

                console.log('[Search] status', resp.status);

                // nếu bị redirect (login page) hoặc content-type khác:
                const ct = resp.headers.get('content-type') || '';
                console.log('[Search] content-type', ct);

                if (!resp.ok) {
                    const txt = await resp.text();
                    console.error('[Search] Response not OK:', resp.status, txt.slice(0, 500));
                    resultContainer.innerHTML = '<div class="search-item"><span>Không thể tìm (server error).</span></div>';
                    resultContainer.style.display = 'block';
                    return;
                }

                if (!ct.includes('application/json')) {
                    // server trả về HTML (thường là trang login hoặc lỗi)
                    const text = await resp.text();
                    console.error('[Search] Resp không phải JSON. Có thể bị redirect tới login hoặc lỗi HTML:', text.slice(0, 500));
                    resultContainer.innerHTML = '<div class="search-item"><span>Không thể tìm (kết quả không phải JSON).</span></div>';
                    resultContainer.style.display = 'block';
                    return;
                }

                const data = await resp.json();

                resultContainer.innerHTML = '';

                if (!Array.isArray(data) || data.length === 0) {
                    resultContainer.innerHTML = '<div class="search-item"><span>Không tìm thấy kết quả</span></div>';
                    resultContainer.style.display = 'block';
                    return;
                }

                data.forEach(user => {
                    const img = user.image || '/images/default-avatar.png';
                    resultContainer.innerHTML += `
              <a class="search-item" href="/Profile/ProfileDetail/${user.id}">
                <img src="${img}" alt="Avatar" />
                <span>${user.fullName || user.userName || 'No name'}</span>
              </a>`;
                });

                resultContainer.style.display = 'block';
            } catch (err) {
                console.error('[Search] Lỗi fetch:', err);
                const resultContainer = document.getElementById('search-results');
                if (resultContainer) {
                    resultContainer.innerHTML = '<div class="search-item"><span>Lỗi mạng hoặc server</span></div>';
                    resultContainer.style.display = 'block';
                }
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.querySelector('.header-seach-input');
            const resultContainer = document.getElementById('search-results');

            if (!searchInput) {
                console.error('[Search] Không tìm thấy ô input .header-seach-input');
                return;
            }
            if (!resultContainer) {
                console.error('[Search] Không tìm thấy #search-results');
                return;
            }

            const debounced = debounce(e => {
                const q = e.target.value.trim();
                if (q.length > 0) getSearchUser(q);
                else {
                    resultContainer.innerHTML = '';
                    resultContainer.style.display = 'none';
                }
            }, 300);

            searchInput.addEventListener('input', debounced);
        });
    })();
</script>
