@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ApplicationUser user = null;
    if (SignInManager.IsSignedIn(User))
    {
        user = await UserManager.GetUserAsync(User);
    }
}

<style>
    /* Định vị dropdown khi hover */
    .nav-item.dropdown {
        position: relative;
    }

        .nav-item.dropdown:hover .dropdown-menu {
            display: block;
            position: absolute;
            top: calc(100% + 4px); /* nằm ngay dưới thẻ <a>, cách ra 4px */
            left: 0;
            z-index: 1000;
        }

    .dropdown-menu {
        min-width: 200px;
        padding: 0.5rem 0;
        border-radius: 0.75rem;
        background-color: white;
    }

    .dropdown-item i {
        font-size: 1.1rem;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .nav-link.dropdown-toggle {
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .nav-link.dropdown-toggle:hover {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 0.5rem;
        }
</style>

<ul class="navbar-nav ms-auto me-5">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown me-3">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown">
                <i class="bi bi-person-circle me-2 fs-5"></i>
                <span class="text-white">@user?.FullName</span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear me-2"></i> Manage Account
                    </a>
                </li>
                <li>
                    <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Index" asp-route-id="@user?.Id">
                        <i class="bi bi-person-lines-fill me-2"></i> My Profile
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Post", new { area = "" })">
                        <button type="submit" class="dropdown-item d-flex align-items-center text-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-light me-2" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-light text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
