@model List<DoAnCoSo.Models.ApplicationUser>

@{
    ViewData["Title"] = "Bạn bè";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Danh sách bạn bè</h3>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body d-flex align-items-center">
                        <img src="@user.Image ?? " /images/default-avatar.png"" width="50" class="rounded-circle me-3" />
                        <div>
                            <a href="@Url.Action("ProfileDetail", "Profile", new { id = user.Id })" class="fw-bold text-decoration-none text-dark">
                                @user.FullName
                            </a>
                            <p class="text-muted mb-0">@user.UserName</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Bạn chưa kết bạn với ai.</p>
}
